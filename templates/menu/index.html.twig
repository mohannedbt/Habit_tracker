{% extends 'base.html.twig' %}

{% block title %}Habit Tracker - Home{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .hero {
            background: linear-gradient(135deg, #00b09b, #96c93d);
            color: white;
            padding: 100px 20px;
            border-radius: 20px;
            text-align: center;
            margin-bottom: 60px;
        }

        .hero h1 {
            font-size: 3.2rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 40px;
        }

        .btn-custom {
            padding: 12px 24px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .btn-login {
            background-color: white;
            color: #00b09b;
            border: 2px solid white;
        }

        .btn-login:hover {
            background-color: transparent;
            color: white;
        }

        .btn-register {
            background-color: transparent;
            color: white;
            border: 2px solid white;
            margin-left: 15px;
        }

        .btn-register:hover {
            background-color: white;
            color: #00b09b;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 30px;
            text-align: center;
        }

        .feature-card {
            padding: 30px;
            border-radius: 12px;
            background: #f9f9f9;
            box-shadow: 0 6px 20px rgba(0,0,0,0.05);
        }

        .feature-icon {
            font-size: 40px;
            color: #00b09b;
            margin-bottom: 15px;
        }

        footer {
            text-align: center;
            margin-top: 80px;
            padding: 20px;
            color: #888;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <section class="hero">
            <h1>Master Your Habits</h1>
            <p>Track your daily progress, build routines, and improve your life with our powerful habit tracker.</p>
            <div>
                <a href="{{ path('app_login') }}" class="btn btn-custom btn-login">Login</a>
                <a href="{{ path('app_register') }}" class="btn btn-custom btn-register">Register</a>
            </div>
        </section>

        <section class="features">
            <div class="feature-card">
                <div class="feature-icon">üìä</div>
                <h5>Daily Tracking</h5>
                <p>Log your habits and monitor progress every day with ease.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üéØ</div>
                <h5>Goal Setting</h5>
                <p>Set clear goals and work toward them consistently.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üîî</div>
                <h5>Reminders</h5>
                <p>Get notified to stay on track and never miss a habit.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üìà</div>
                <h5>Progress Insights</h5>
                <p>Visual charts and stats to keep you motivated.</p>
            </div>
        </section>

        <footer>
            &copy; {{ "now"|date("Y") }} Habit Tracker. Built with ‚ù§Ô∏è using Symfony & Bootstrap.
        </footer>
    </div>
{% endblock %}
